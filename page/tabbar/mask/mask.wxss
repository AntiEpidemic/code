/* pages/myOrder/myOrder.wxss */
.nearCard-fl {
  width: 40%;
  float: left;

}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr text {
  font-size: 32rpx;

}

.down {
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}

.down view {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}

.feedBack {
  text-align: center;
  background-color: #eecfbd;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10rpx;
  padding: 5rpx 0;
  margin: 10rpx 0 0 0;
}

.table {
  display: table;
  width: 100%;
  /* border-collapse 属性设置表格的边框是否被合并为一个单一的边框，解决相邻单元格边框未合并导致有些边框变粗的视觉效果 */
  border-collapse: collapse;
  overflow-x: hidden;
}
.nearCard-fr {
  display: table-row;
  font-size: 35rpx;
  line-height: 60rpx;
  width: 100%;
  margin-left: 30%;
  margin-top: 60rpx;
  color: black;
  border: 1px solid lightyellow;
}



